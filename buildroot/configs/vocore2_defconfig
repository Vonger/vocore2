# target
BR2_mipsel=y
BR2_mips_32r2=y

# toolchain
BR2_TOOLCHAIN_BUILDROOT_VENDOR="mt76x8"
BR2_TOOLCHAIN_BUILDROOT_MUSL=y
BR2_PACKAGE_HOST_GDB=y

# build options
BR2_ENABLE_LTO=y

# system configuration
BR2_TARGET_GENERIC_HOSTNAME="vocore2"

# kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_PATCH="$(BR2_EXTERNAL_VOCORE2_PATH)/board/vocore2/linux/patches/"
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="$(BR2_EXTERNAL_VOCORE2_PATH)/board/vocore2/linux/linux.config"
BR2_LINUX_KERNEL_LZMA=y

# firmware
BR2_PACKAGE_MT76_FIRMWARE=y
BR2_PACKAGE_MT76_FIRMWARE_MT7628=y

# package
BR2_PACKAGE_BUSYBOX_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_VOCORE2_PATH)/board/vocore2/busybox/busybox-extra.config"
BR2_PACKAGE_WIRELESS_REGDB=y
BR2_PACKAGE_WIRELESS_TOOLS=y
BR2_PACKAGE_WPA_SUPPLICANT=y
BR2_PACKAGE_HOSTAPD=y

# image
BR2_ROOTFS_POST_BUILD_SCRIPT="$(BR2_EXTERNAL_VOCORE2_PATH)/board/vocore2/post-build.sh"
BR2_ROOTFS_POST_IMAGE_SCRIPT="$(BR2_EXTERNAL_VOCORE2_PATH)/board/vocore2/post-image.sh"
# BR2_TARGET_ROOTFS_TAR is not set
BR2_TARGET_ROOTFS_SQUASHFS=y
BR2_TARGET_ROOTFS_SQUASHFS_PAD=y
BR2_TARGET_ROOTFS_SQUASHFS4_XZ=y

# uboot
BR2_TARGET_UBOOT=y
BR2_TARGET_UBOOT_USE_CUSTOM_CONFIG=y
BR2_TARGET_UBOOT_CUSTOM_CONFIG_FILE="$(BR2_EXTERNAL_VOCORE2_PATH)/../uboot/vocore2_defconfig"
BR2_TARGET_UBOOT_NEEDS_DTC=y
# BR2_TARGET_UBOOT_FORMAT_BIN is not set
BR2_TARGET_UBOOT_FORMAT_CUSTOM=y
BR2_TARGET_UBOOT_FORMAT_CUSTOM_NAME="u-boot-with-spl.bin"

# host
BR2_PACKAGE_HOST_GENIMAGE=y
