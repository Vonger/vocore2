# target
BR2_mipsel=y
BR2_mips_32r2=y

# toolchain
BR2_TOOLCHAIN_BUILDROOT_VENDOR="mt76x8"
BR2_TOOLCHAIN_BUILDROOT_MUSL=y
BR2_PACKAGE_HOST_GDB=y

# build options
BR2_ENABLE_LTO=y

# system configuration
BR2_TARGET_GENERIC_HOSTNAME="vocore2_flasher"

# kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_PATCH="$(BR2_EXTERNAL_VOCORE2_PATH)/board/vocore2_flasher/linux/patches/"
