BR2_LINUX_KERNEL_LZMA=y

# package
BR2_PACKAGE_BUSYBOX_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_VOCORE2_PATH)/board/vocore2_flasher/busybox/busybox-extra.config"

# image
# BR2_TARGET_ROOTFS_TAR is not set
BR2_TARGET_ROOTFS_INITRAMFS=y
